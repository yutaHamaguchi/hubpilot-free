{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "no-undef": "error",
    "no-trailing-spaces": "error",
    "eol-last": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "keyword-spacing": ["error", { "before": true, "after": true }],
    "space-before-blocks": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"]
  },
  "globals": {
    "supabase": "readonly",
    "authManager": "writable",
    "wordpressIntegration": "writable",
    "ArticleGenerator": "readonly",
    "WordPressIntegration": "readonly",
    "AuthManager": "readonly",
    "ImageGenerator": "readonly",
    "SUPABASE_CONFIG": "readonly",
    "HubPilotApp": "readonly",
    "document": "readonly",
    "window": "readonly",
    "console": "readonly"
  },
  "ignorePatterns": [
    "node_modules/",
    ".supabase/",
    "dist/",
    "build/"
  ]
}
